<h1><%= t('.header') %></h1>

<div class="container col-md-6 mt-2">
  <%= form_with url: feedback_path, local: true, class: 'form-group' do |form |%>
  <div class="form-group">
    <%= form.label :feedback%>
    <br>
    <%= form.text_area :feedback, class: 'form-control', rows: 7%>
  </div>
  <div class="actions mt-1">
    <%= form.submit t('.send'), class: 'btn btn-success'%>
  </div>
  <%end%>
</div> 