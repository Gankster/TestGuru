<div class="row text-center">
  <div class="col">
    <h1><%= t(".title") %></h1>
  </div>
</div>

<%= render "shared/errors", resource: @badge %>

<table class="table">
  <thead>
    <tr>
      <th><%= t('.image') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.rule') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @badges %>
  </tbody>
</table>

<%= link_to t('.new_badge'), new_admin_badge_path, class: 'btn btn-primary' %>
